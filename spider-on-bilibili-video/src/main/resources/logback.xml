    <logger name ="cn.zpl" level = "DEBUG">
        <appender-ref ref="DEBUG_FILE" />
    </logger>
    <!--<appender-ref ref="permission"/>-->
    <!--</logger>-->

    <!-- TRACE < DEBUG < INFO < WARN < ERROR -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>